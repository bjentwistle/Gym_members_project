{% extends "base.jinja" %}

{% block content %}
<h1>Add a new booking: </h1>
<a class = add_booking_area >
    <form class = form-inline-add action="/bookings/new" method="post"> 

    <label class = label for="session">Select a session</label>
        <select name="session_id" id="session">
            <option selected="true" disabled="disabled">Choose Session</option>

            {% for session in sessions%}
                <option value = "{{ session.id}}" >{{ session.name}} </option>
            {% endfor %}
        </select>

    <label class = label for="member">Select a member</label>
        
        <select name="member_id" id="member" >
            <option selected="true" disabled="disabled">Choose Member</option>

            {% for member in members %}
                <option value = "{{ member.id }}">{{member.first_name}} {{member.last_name}}</option>
                
            {% endfor %}
        
        </select>

    <input class = add_session type="submit" value="Add Booking" style="font-weight: bold;">
    </form>
    </a>
    <footer class = footer>
        <div class = single_picture>
            <img class = img src="{{ url_for('static', filename='swimming pool.jpg') }}" alt = "swimming pool" >
        </div>
        <div class = single_picture>
            <img class = img src="{{ url_for('static', filename = 'ropes.jpg') }}" alt = "ropes" >
        </div>
        <div class = single_picture>
            <img class = img src="{{ url_for('static', filename='trainers.jpg') }}" alt = "pair of trainers" >
        </div>
    </footer>
{% endblock %}