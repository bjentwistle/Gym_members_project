{% extends "base.jinja" %}

{% block content %}

<form class = input_form action="/members/{{member.id}}/edit" method="post">
<div class = form_row>
    <label for="first_name">First Name </label>
    <input type="text" id="first_name" name="first_name" value="{{member.first_name}}" required autofocus style = "width:350px;">
</div>

<div class = form_row>
    <label for="last_name">Last Name </label>
    <input type="text" id="last_name" name="last_name" value="{{member.last_name}}" required autofocus style = "width:350px;">
</div>
<div class = form_row>
    <label for="postcode">Postcode </label>
    <input type="text" id="postcode" name="postcode" value="{{member.postcode}}" required style = "width:350px;">
</div>

<div class = form_row>
    <label for="premium_member">Premium member </label>
    <select id="premium_member" name="premium_member">

    <option value="true"
        {% if member.premium_member == True %} selected="selected" {% endif %}>
        Yes
    </option>

    <option value="false"
        {% if member.premium_member == False %} selected="selected" {% endif %}>
        No
    </option>

    </select>
</div>

<button class = submit_button type="submit">Update member</button>

</form>

{% endblock %}