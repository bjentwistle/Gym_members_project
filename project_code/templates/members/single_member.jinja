{% extends "base.jinja" %}

{% block content %}

<body>

    <table class = table-striped>
    <tr >
        <th>First name</th>
        <th>Last name</th>
        <th>Postcode</th>
        <th>Premium Member?</th>
        <th>Details</th>
    </tr>

    <tr >
    <td>{{ member.first_name }} </td> 
    <td>{{ member.last_name }} </td> 
    <td>{{ member.postcode  }} </td> 
    <td> 
        {% if member.premium_member == True %}
            Yes
        {% else %}
            <i> No </i>
        {% endif %} </td>
    <td><a href = "/members/{{member.id}}/edit"> Edit member </a></td>
 
 </tr>
 </table>
 <hr>

    <a href = "/members"> Back to all members</a>
    
    <footer class = footer>
        <div class = single_picture>
            <img class = img src="{{ url_for('static', filename='swimming pool.jpg') }}" alt = "swimming pool" >
        </div>
        <div class = single_picture>
            <img class = img src="{{ url_for('static', filename = 'ropes.jpg') }}" alt = "ropes" >
        </div>
        <div class = single_picture>
            <img class = img src="{{ url_for('static', filename='trainers.jpg') }}" alt = "pair of trainers" >
        </div>
    </footer>
    
</body>

{% endblock %}