{% extends "base.jinja" %}

{% block content %}

<body>
    <h1 class="single_member"> Member details for </h1> 
    <div>
        <h4>Name - {{ member.first_name }} {{ member.last_name }}</h4>
        <p> Postcode - {{ member.postcode  }} </p>
        <p>Premium Member? -
        {% if session.premium_session == True %}
            Yes
        {% else %}
            <i> No </i>
        {% endif %} </p>

        <a href = "/members/edit"> Edit member </a>
    </div>
    <hr>

    <a href = "/members"> Back to all members</a>
    <p> </p>
</body>

{% endblock %}