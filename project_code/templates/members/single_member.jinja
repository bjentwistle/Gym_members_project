{% extends "base.jinja" %}

{% block content %}

<body>
    <h1 class="single_member"> Member details: </h1> 
    <div>
        <h4>First name - {{ member.first_name }} </h4> 
        <h4>Last name - {{ member.last_name }}</h4>
        <p> Postcode - {{ member.postcode  }} </p>
        <p>Premium Member? -
        {% if member.premium_member == True %}
            Yes
        {% else %}
            <i> No </i>
        {% endif %} </p>

        <a href = "/members/{{member.id}}/edit"> Edit member </a>
    </div>
    <hr>

    <a href = "/members"> Back to all members</a>
    <p> </p>
    <footer class = footer>
        <div class = single_picture>
            <img class = img src="{{ url_for('static', filename='swimming pool.jpg') }}" alt = "swimming pool" >
        </div>
        <div class = single_picture>
            <img class = img src="{{ url_for('static', filename = 'ropes.jpg') }}" alt = "ropes" >
        </div>
        <div class = single_picture>
            <img class = img src="{{ url_for('static', filename='trainers.jpg') }}" alt = "pair of trainers" >
        </div>
    </footer>
    
</body>

{% endblock %}