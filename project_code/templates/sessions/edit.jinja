{% extends "base.jinja" %}

{% block content %}

<form class = input_form action="/sessions/{{session.id}}/edit" method="post">
<div class = form_row>
    <label for="name">Name </label>
    <input type="text" id="name" name="name" value="{{session.name}}" required autofocus style="width:350px;">
</div>
<div class = form_row>
    <label for="what_day">What day </label>
    <input type="text" id="what_day" name="what_day" value="{{session.what_day}}" required style="width:350px;">
</div>

<div class = form_row>
    <label for="what_time">When </label>
    <input type="text" id="what_time" name="what_time" value="{{session.what_time}}" required style="width:350px;">
</div>
<div class = form_row>
    <label for="duration">Duration </label>
    <input type="number" id="duration" name="duration" value="{{session.duration}}" required style="width:350px;">
</div>

<div class = form_row>
    <label for="premium_session">Premium session </label>
    <select id="premium_session" name="premium_session">

    <option value="true"
        {% if session.premium_session == True %} selected="selected" {% endif %}>
        Yes
    </option>

    <option value="false"
        {% if session.premium_session == False %} selected="selected" {% endif %}>
        No
    </option>

    </select>
</div>
    <input class = submit_button type="submit" value="Update session" style="font-weight: bold;">

{# <button type="submit">Update session</button> #}

</form>

{% endblock %}