{% extends "base.jinja" %}

{% block content %}
<h1>Add a new member: </h1>
<a class = add_member_area >
    <form class = form-inline-add action="/members" method="post"> 

    <label class = label for="first_name">First name</label>
    <input type="text" name="first_name" id="first_name">

    <label class = label for="last_name">Last name</label>
    <input type="text" name="last_name" id="last_name">

    <label class = label for="postcode">Postcode </label>
    <input type="text" name="postcode" id="postcode">

    <label class = label for="permium_member">Premium member?</label>
    <input type="checkbox" name="premium_member" id="premium_member" >

    <label class = label for="title">Location</label>
    <input type="text" name="location" id="room_location" placeholder="Aisle #, shelf letter">

    <input class = add_member type="submit" value="Add Member" style="font-weight: bold;">
    </form>
    </a>



{% endblock %}