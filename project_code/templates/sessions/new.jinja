{% extends "base.jinja" %}

{% block content %}
<h1>Add a new session: </h1>
<a class = add_session_area >
    <form class = form-inline-add action="/sessions/new" method="post"> 

    <label class = label for="name">Session name</label>
    <input type="text" name="name" id="name">

    <label class = label for="duration">Duration in minutes</label>
    <input type="text" name="duration" id="duration">

    <label class = label for="what_day">Which day</label>
    <input type="text" name="what_day" id="what_day">

    <label class = label for="what_time">When</label>
    <input type="text" name="what_time" id="what_time">

    <label class = label for="permium_session">Premium session?</label>
    <input type="checkbox" name="premium_session" id="premium_session" value = "True">

    <input class = add_session type="submit" value="Add Session" style="font-weight: bold;">
    </form>
    </a>
        <footer class = footer>
        <div class = single_picture>
            <img class = img src="{{ url_for('static', filename='swimming pool.jpg') }}" alt = "swimming pool" >
        </div>
        <div class = single_picture>
            <img class = img src="{{ url_for('static', filename = 'ropes.jpg') }}" alt = "ropes" >
        </div>
        <div class = single_picture>
            <img class = img src="{{ url_for('static', filename='trainers.jpg') }}" alt = "pair of trainers" >
        </div>
    </footer>



{% endblock %}