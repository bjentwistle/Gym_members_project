{% extends "base.jinja" %}


{% block content %}
<div class = top-border>
    <div class="centered"><strong>Gym Sessions Admin</strong></div>
    <img src="{{ url_for('static', filename='feet_weight_unsplash.jpg') }}" alt = "feet and round weight" style='width:100%;'>
</div>
<hr>
<p></p>
<a  href = "sessions/new" > Add new session</a> 
<p></p>
<hr>

<h2>All sessions</h2>

<table>
  <tr >
    <th>Name of Session</th>
    <th>Day</th>
    <th>Time</th>
    <th>Premium?</th>
    <th>Details link</th>
  </tr>

{% for session in sessions %}
  <tr >
    <td>{{ session.name}}</td>
    <td>{{session.what_day}}</td>
    <td>{{session.what_time}}</td>
    <td>{% if session.premium_session == True %} Yes {% else %} No {%endif%} </td>
    <td><a href = "/sessions/{{ session.id }}" > Show details </a> </td>

  </tr>
{% endfor %}
</table>

</div>

{% endblock %}
