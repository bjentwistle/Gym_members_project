{% extends "base.jinja" %}


{% block content %}
<div class = top-border>
    <div class="centered"><strong>Gym Sessions Admin</strong></div>
    <img src="{{ url_for('static', filename='feet_weight_unsplash.jpg') }}" alt = "feet and round weight" style='width:100%;'>
</div>
<hr>
<p></p>
<a  href = "sessions/new" > Add new session</a> 
<p></p>
<hr>

<div class = "session-container">
{% for session in sessions %}

<div class = "session">
<h3> Session - {{ session.name}} </h3>
<h4> When - {{session.what_day}} @ {{session.what_time}} </h4>

<a href = "/sessions/{{ session.id }}" > Show details </a> 
<hr>

</div>

{% endfor %}
</div>

{% endblock %}
