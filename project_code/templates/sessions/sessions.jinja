{% extends "base.jinja" %}


{% block content %}
<div class = top-border>
    <div class="centered"><strong>CC Gym Admin</strong></div>
    <img src="{{ url_for('static', filename='feet_weight_unsplash.jpg') }}" alt = "feet and round weight" style='width:100%;'>
</div>
<hr>
<p></p>
<a href = "sessions/new" > Add new session</a> 
<p></p>
<hr>

<div class = "session-container">
{% for session in sessions %}

<div class = "session">
<h3> Session - {{ session.name}} </h3>
<p> Duration -  {{ session.duration }} </p>
<p> Premium Session? -
        {% if session.premium_session == True %}
            Yes
        {% else %}
            <i> No </i>
        {% endif %} </p>
</p></p>
{# May wish to put in a day and time here #}
<a href = "/sessions/{{ session.id }}" > Show details </a> <!--add a link to each session selected by index in sessions /-->
<hr>

</div>

{% endfor %}
</div>

{% endblock %}
